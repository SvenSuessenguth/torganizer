// Jenkins need to install the following additional plugins:
// https://updates.jenkins.io/download/plugins/
// SonarQube Scanner
// Warnings Next Generation

pipeline {

  agent any

  stages {
    stage('jdks') {
      matrix {
        agent any
        axes {
          axis {
            name 'JavaDevelopmentKit'
            values 'openjdk-8', 'openjdk-13'
          }                    
        }
        stages {
          stage('compile') {
            tools {
              maven 'apache-maven-3.6'
            }
          
		    steps {
			  jdk = tool name: ${JavaDevelopmentKit}
			  env.JAVA_HOME = "${jdk}"
              execute("java -version")
            }
          }
        }
      }
    }
  }
}

void execute(instruction) {
  if (isUnix()) {
    sh instruction
  } else {
    bat instruction
  }
}
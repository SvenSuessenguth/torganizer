pipeline {

  agent any

  tools {
    maven 'apache-maven-3.6'
  }

  stages {
    stage('jdks') {
      matrix {
        axes {
          axis {
            name 'jdkVersion'
            values 'openjdk-8'
          }
        }

        stages {
          stage('compile') {
            tools {
             jdk '${jdkVersion}'
            }
            steps {
              execute("mvn compile -T 4C")
            }
          }
          stage('test') {
            tools {
             jdk '${jdkVersion}'
            }
            steps {
              execute("mvn test -T 4C")
            }
          }
        }
      }
    }
  }
}


void execute(instruction) {
  if (isUnix()) {
    sh instruction
  } else {
    bat instruction
  }
}
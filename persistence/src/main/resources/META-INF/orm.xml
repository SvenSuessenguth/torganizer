  <entity class="org.cc.torganizer.core.entities.Group" />
  <entity class="org.cc.torganizer.core.entities.Gymnasium" />
  <entity class="org.cc.torganizer.core.entities.IndexedOpponent" />    
  <entity class="org.cc.torganizer.core.entities.Match" />  
  
  <entity class="org.cc.torganizer.core.entities.Result" />
  <entity class="org.cc.torganizer.core.entities.Round" />
  <entity class="org.cc.torganizer.core.entities.Score" />
  <entity class="org.cc.torganizer.core.entities.Squad" />
  <entity class="org.cc.torganizer.core.entities.Team" />
  -->
  
  <converter class="org.cc.torganizer.persistence.converter.BooleanTrueFalseConverter"/>
</entity-mappings>  
<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1" 
  xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd">  
  
  <named-query name="Restriction.findAll">
    <query>SELECT r FROM Restriction r</query>
  </named-query>
  <named-query name="Restriction.findById">
    <query>SELECT r FROM Restriction r WHERE r.id = :id</query>
  </named-query>
  <named-query name="Person.findAll">
    <query>SELECT p FROM Person p</query>
  </named-query>
  <named-query name="Person.findById">
    <query>SELECT p FROM Person p WHERE p.id = :id</query>
  </named-query>
  <named-query name="Person.findByGender">
    <query>SELECT p FROM Person p WHERE p.gender = :gender</query>
  </named-query>
  <named-query name="Player.findAll">
    <query>SELECT p FROM Player p</query>
  </named-query>
  <named-query name="Player.findById">
    <query>SELECT p FROM Player p WHERE p.id = :id</query>
  </named-query>  
  <named-query name="Tournament.findById">
    <query>SELECT t FROM Tournament t WHERE t.id = :id</query>
  </named-query>
  <named-query name="Tournament.findAll">
    <query>SELECT t FROM Tournament t</query>
  </named-query>
  <named-query name="Tournament.findSubscribers">
    <query>SELECT p FROM Player p, Tournament t WHERE t.id = :id AND p MEMBER OF t.subscribers</query>
  </named-query>
  <named-query name="Tournament.findOpponents">
    <query>SELECT o FROM Opponent o, Tournament t WHERE t.id = :id AND o MEMBER OF t.opponents</query>
  </named-query>
  <named-query name="Tournament.findDisciplines">
    <query>SELECT d FROM Discipline d, Tournament t WHERE t.id = :id AND d MEMBER OF t.disciplines</query>
  </named-query>
  <named-query name="Opponent.findById">
    <query>SELECT o FROM Opponent o WHERE o.id = :id</query>
  </named-query>
  <named-query name="Discipline.findAll">
    <query>SELECT d FROM Discipline d</query>
  </named-query>
  <named-query name="Discipline.findById">
    <query>SELECT d FROM Discipline d WHERE d.id = :id</query>
  </named-query>
  <named-query name="Discipline.findOpponents">
    <query>SELECT o FROM Opponent o, Discipline d WHERE d.id = :id AND o MEMBER OF d.opponents</query>
  </named-query>
  <named-query name="Discipline.findRestrictions">
    <query>SELECT r FROM Restriction r, Discipline d WHERE d.id = :id AND r MEMBER OF d.restrictions</query>
  </named-query>
  
  <entity class="org.cc.torganizer.core.entities.Restriction">
    <table name="RESTRICTIONS" />
    <inheritance strategy="JOINED"/>    
    <discriminator-column name="TYPE" discriminator-type="STRING" length="20"/>
    <attributes>    
      <id name="id" >
        <column name="RESTRICTION_ID"/>
        <generated-value strategy="IDENTITY"/>
       </id>
     </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.AgeRestriction" access="FIELD">
    <table name="AGERESTRICTIONS" />
    <discriminator-value>A</discriminator-value>
    <attributes>
      <basic name="maxDateOfBirth"><column name="MAX_DATE_OF_BIRTH"/></basic>      
      <basic name="minDateOfBirth"><column name="MIN_DATE_OF_BIRTH"/></basic>
    </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.GenderRestriction">
    <table name="GENDERRESTRICTIONS" />
    <discriminator-value>G</discriminator-value>
    <attributes>    
      <basic name="validGender">
        <column name="VALIDGENDER" nullable="false" />
        <enumerated>STRING</enumerated>        
      </basic>
    </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.OpponentTypeRestriction">
    <table name="OPPONENTTYPERESTRICTIONS" />
    <discriminator-value>T</discriminator-value>
    <attributes>    
      <basic name="validOpponentType">
        <column name="VALIDOPPONENTTYPE" nullable="true" />
        <enumerated>STRING</enumerated>        
      </basic>
    </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.Person" access="FIELD" >
    <table name="PERSONS" />
    <attributes>    
      <id name="id" >
        <column name="PERSON_ID"/>
          <generated-value strategy="IDENTITY"/>
       </id>
       <basic name="firstName"><column name="FIRST_NAME"/></basic>
       <basic name="lastName"><column name="LAST_NAME"/></basic>
       <basic name="dateOfBirth"><column name="DATE_OF_BIRTH"/></basic>
       <basic name="gender">
         <column name="GENDER" nullable="false" />
         <enumerated>STRING</enumerated>        
       </basic>      
     </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.Tournament" access="FIELD">
    <table name="TOURNAMENTS" />
    <attributes>    
      <id name="id" >
        <column name="TOURNAMENT_ID"/>
          <generated-value strategy="IDENTITY"/>
       </id>
       <basic name="name"><column name="NAME"/></basic>
       <one-to-many name="subscribers">
         <join-table name="TOURNAMENT_SUBSCRIBERS">
           <join-column name="TOURNAMENT_ID" referenced-column-name="TOURNAMENT_ID"/>
           <inverse-join-column name="OPPONENT_ID" referenced-column-name="OPPONENT_ID" unique="true" />
         </join-table>
         <cascade><cascade-all/></cascade>
       </one-to-many>
       <one-to-many name="opponents">
         <join-table name="TOURNAMENT_OPPONENTS">
           <join-column name="TOURNAMENT_ID" referenced-column-name="TOURNAMENT_ID"/>
           <inverse-join-column name="OPPONENT_ID" referenced-column-name="OPPONENT_ID" unique="true" />
         </join-table>
         <cascade><cascade-all/></cascade>
       </one-to-many>
       <one-to-many name="disciplines">
         <join-table name="TOURNAMENT_DISCIPLINES">
           <join-column name="TOURNAMENT_ID" referenced-column-name="TOURNAMENT_ID"/>
           <inverse-join-column name="DISCIPLINE_ID" referenced-column-name="DISCIPLINE_ID" unique="true" />
         </join-table>
         <cascade><cascade-all/></cascade>
       </one-to-many>
     </attributes>
  </entity>
  
  <entity class="org.cc.torganizer.core.entities.Opponent" access="FIELD">
    <table name="OPPONENTS" />
    <inheritance strategy="JOINED"/>    
    <discriminator-column name="TYPE" discriminator-type="STRING" length="20"/>
    <attributes>    
      <id name="id" >
        <column name="OPPONENT_ID"/>
        <generated-value strategy="IDENTITY"/>
       </id>
       <basic name="status">
         <column name="STATUS" nullable="false" />
         <enumerated>STRING</enumerated>        
       </basic>
     </attributes>
  </entity>  
  
  <entity class="org.cc.torganizer.core.entities.Player" access="FIELD">
    <table name="PLAYERS" />
    <discriminator-value>P</discriminator-value>
    <attributes>
      <basic name="lastMatch"><column name="LAST_MATCH"/></basic>      
      <one-to-one name="person">
        <join-column name="PERSON_ID" nullable="false" />
        <cascade><cascade-all/></cascade>
      </one-to-one>
    </attributes>
  </entity>


  <!-- 
  @OneToMany(cascade = CascadeType.ALL)
  @OrderBy("index ASC")
  @JoinTable(name = "DISCIPLINES_ROUNDS", joinColumns = {@JoinColumn(name = "DISCIPLINE_ID") }, inverseJoinColumns = @JoinColumn(name = "ROUND_ID"))
   -->
  <entity class="org.cc.torganizer.core.entities.Discipline" access="FIELD">
    <table name="DISCIPLINES" />
    <attributes>    
      <id name="id" >
        <column name="DISCIPLINE_ID"/>
          <generated-value strategy="IDENTITY"/>
       </id>
       <basic name="label"><column name="LABEL" nullable="false" /></basic>
       <one-to-many name="opponents">
         <join-table name="DISCIPLINES_OPPONENTS">
           <join-column name="DISCIPLINE_ID" referenced-column-name="DISCIPLINE_ID"/>
           <inverse-join-column name="OPPONENT_ID" referenced-column-name="OPPONENT_ID" unique="true" />
         </join-table>
         <cascade><cascade-all/></cascade>
       </one-to-many>
       <one-to-many name="restrictions">
         <join-table name="DISCIPLINES_RESTRICTIONS">
           <join-column name="DISCIPLINE_ID" referenced-column-name="DISCIPLINE_ID"/>
           <inverse-join-column name="RESTRICTION_ID" referenced-column-name="RESTRICTION_ID" unique="true" />
         </join-table>
         <cascade><cascade-all/></cascade>
       </one-to-many>
     </attributes>
  </entity>
  
